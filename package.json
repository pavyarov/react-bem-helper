{
  "name": "@redneckz/react-bem-helper",
  "version": "1.0.4",
  "author": "Alexander Alexandrov",
  "description": "BEM library for React",
  "keywords": [
    "bem",
    "react"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/redneckz/react-bem-helper"
  },
  "bugs": {
    "url": "https://github.com/redneckz/react-bem-helper/issues"
  },
  "homepage": "https://github.com/redneckz/react-bem-helper",
  "main": "dist/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0-0 || ^16.0.0-0"
  },
  "dependencies": {
    "classnames": "~2.2.5",
    "lodash": "~4.17.2",
    "prop-types": "~15.5.8"
  },
  "devDependencies": {
    "babel-cli": "~6.26.0",
    "babel-core": "~6.26.0",
    "babel-eslint": "~7.2.3",
    "babel-jest": "~21.0.0",
    "babel-plugin-transform-class-properties": "~6.24.1",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-es2015": "~6.24.1",
    "babel-preset-react": "~6.24.1",
    "babel-preset-stage-0": "~6.24.1",
    "browserify": "~14.4.0",
    "coveralls": "~2.13.1",
    "cross-env": "~5.0.0",
    "eslint": "~4.6.1",
    "eslint-config-airbnb": "~15.1.0",
    "eslint-plugin-import": "~2.7.0",
    "eslint-plugin-jsx-a11y": "~6.0.2",
    "eslint-plugin-react": "~7.3.0",
    "jest-cli": "~21.0.1",
    "react": "~15.6.1",
    "react-test-renderer": "~15.6.1",
    "rimraf": "~2.6.1"
  },
  "scripts": {
    "prepublish": "npm run eslint && npm run jest && npm run build",
    "bundle": "npm run build && browserify dist/index.js --standalone BEM | uglifyjs - -c --keep-fnames -o bundle.js",
    "prebuild": "npm run clean",
    "build": "cross-env-shell NODE_ENV=production \"npm run build:commonjs && npm run build:es\"",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --ignore *.spec.* --out-dir dist --source-maps",
    "build:es": "cross-env BABEL_ENV=es babel src --ignore *.spec.* --out-dir es --source-maps",
    "test": "npm run eslint && npm run jest && npm run coveralls",
    "eslint": "eslint \"src/**/*.js\" \"src/**/*.jsx\" --cache --cache-location \"./.cache\"",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "coveralls": "coveralls < coverage/lcov.info",
    "clean": "rimraf dist es"
  },
  "jest": {
    "verbose": true,
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "lcov"
    ]
  }
}
